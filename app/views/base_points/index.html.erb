<%= provide(:title, "base_index") %>

<h1 class="user-title">拠点一覧</h1>

<table class="table table-bordered table-striped table-condensed text-center base-table">
  <thead>
    <td colspan="3"></td>
    <td colspan="3"></td>
    <td>拠点番号</td>
    <td>拠点名</td>
    <td>勤怠種類</td>
  </thead>
  
  <tbody>
    <% @base_points.each do |base_point| %>
      <tr>
        <td colspan="3" class="text-left">
          <%= link_to "修正", edit_base_point_path(base_point),
          class: "btn btn-primary custom-btn" %>
        </td>
        <td colspan="3">
          <%= link_to "削除", base_point_path(base_point), class: "btn btn-primary", 
          method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
        <td><%= base_point.base_number %></td>
        <td><%= base_point.base_name %></td>
        <td><%= base_point.attendance_type %></td>
      </tr>
    <% end %>
  </tbody>
    
  <thead>
    <td colspan="10"></td>
  </thead>
  
</table>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= link_to "拠点情報追加", new_base_point_path, class: "btn btn-primary btn-lg custom-btn-2" %>
  </div>
</div>

