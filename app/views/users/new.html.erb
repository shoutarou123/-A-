<% provide(:title, 'Sign up') %>
<h1 class="user-title">ユーザー登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, class: "label-signup", class: "user-label-list" %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email, class: "label-signup", class: "user-label-list" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "label-signup", class: "user-label-list" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "user-label-list" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "新規作成", class: "btn btn-primary btn-block btn-signup user-label-list" %>
    <% end %>
  </div>
</div>

